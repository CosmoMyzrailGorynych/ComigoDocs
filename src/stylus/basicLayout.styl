html, body
    position relative
    margin 0
    padding 0
    min-height 100%
html
    height 100%

body
    background #f5f5f5

main
    max-width 45em
    margin 0 auto
    padding 4em 0
    box-sizing border-box

.aChildList
    display flex
    flex-flow row wrap
    justify-content space-between
    margin-top 2em
    & > a
        display block
        flex 0 1 22em
        padding 2em
        box-sizing border-box
        border 1px solid bl
        border-radius br
        background white
        {bs}
        {trans}
        &:hover
            {bsa}

.aNavSidebar
    position absolute
    left 0
    top 0
    bottom 0
    width 20em
    background white
    border-right 1px solid bl
    {bs}
    & > nav
        position sticky
        top 1em
        bottom 1em
        padding 1em

.aToC
    position absolute
    right 0
    top 0
    bottom 0
    max-width 20em
    & > nav
        position sticky
        top 5em
        bottom 5em
        padding 1em