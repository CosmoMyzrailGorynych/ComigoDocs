html, body
    position relative
    margin 0
    padding 0
    min-height 100%
    width 100%
html
    height 100%

body
    background #f5f5f5
    background var(--panel-dark)

.aRootWrapper
    width 100%
    display grid
    justify-content space-between
    grid-template-columns 15em 1fr 20em

main, .aToC, .aNavSidebar
    grid-row 1

.aNavSidebar
    background white
    background var(--panel-light)
    border-right 1px solid bl
    border-color var(--border-light)
    grid-column 1
    & > nav
        position sticky
        top 1em
        bottom 1em
        padding 1em 2em
        & > ul
            padding-left 0
    ul
        list-style none
        padding 0 0 0 1.4em
    a.active
        font-weight bold

main
    padding 4em 2em
    grid-column 2
    max-width 45em
    justify-self center

.aToC
    grid-column 3
    opacity 0.35
    {trans}
    &:hover
        opacity 1
    & > nav
        position sticky
        top 5em
        bottom 5em
        padding 1em 2em

.aChildList
    display grid
    margin 2em auto
    grid-gap 1em
    grid-template-columns 1fr 1fr
    & > a
        display block
        padding 2em
        box-sizing border-box
        border 1px solid bl
        border-color var(--border-light)
        border-radius br
        background white
        background var(--panel-light)
        {bs}
        {trans}
        &:hover
            {bsa}
