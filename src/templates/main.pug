mixin ToC(toc)
    ol
        each link in toc
            li
                a(href=('#'+link.hash))=link.title
                if link.contents
                    +ToC(link.contents)
mixin navPiece(nav)
    ul
        each link in nav
            li
                a(href=link.permalink)=link.title
                if link.children
                    +navPiece(link.children)

